{
  "manifest_version": 3,
  "name": "AppliAssist",
  "version": "1.1",
  "description": "Reads job descriptions and generates tailored application answers using Gemini.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}